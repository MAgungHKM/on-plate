<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OnPlate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/royal_500</item>
        <item name="colorPrimaryVariant">@color/royal_700</item>
        <item name="colorOnPrimary">@color/colorTextTertiary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/royal_500</item>
        <item name="colorSecondaryVariant">@color/royal_500</item>
        <item name="colorOnSecondary">@color/colorTextTertiary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="homeAsUpIndicator">@drawable/ic_back_arrow_white</item>
    </style>
</resources>